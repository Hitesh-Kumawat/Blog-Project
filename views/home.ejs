<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%=content%></p>
<form action="/compose" class="inline">
    <button class="btn btn-primary btn-lg" >Compose</button>
</form>

<% p.forEach(function(post){ %>
    <% let url = "/posts/" + post.title;  %>

    <h2><%=post.title %></h2>

    <p><%=post.body.substring(0, 100) + "..." %><a href="<%= url %>">Read more</a></p>
    <br>
<% }); %>
<%- include('partials/footer'); -%>
